{
    "name": "oceanly",
    "version": "0.0.0",
    "description": "Engine generator for cli apps âœ¨",
    "main": "src/index.js",
    "scripts": {
        "husky:clean": "rm -rf .husky",
        "husky:lint": "npx husky add .husky/prepare-commit-msg 'npx devmoji -e --lint'",
        "husky:init": "npm run husky:clean && husky install && npm run husky:lint",
        "init": "npm install && npm run husky:init",
        "dev": "nodemon --exec babel-node ./src/index",
        "test": "NODE_ENV=test jest test/index.test.js --forceExit",
        "prebuild": "rm -rf ./bin",
        "build": "babel ./src -d ./bin --ignore node_modules,test",
        "start": "oceanly"
    },
    "bin": {
        "oceanly": "src/bin/index"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/roremdev/oceanly.git"
    },
    "keywords": [
        "NodeJS"
    ],
    "author": "@roremDev",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/roremdev/oceanly/issues"
    },
    "config": {
        "env": {
            "PORT": "Connection port of server",
            "MODE": "Mode of runtime"
        },
        "directories": {
            "bin": "Boundle generated by babel",
            "src": "Source code base",
            "test": "Testing directory by Jest"
        }
    },
    "engines": {
        "node": "14.x"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "extends": [
            "eslint:recommended"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "no-console": "off"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": [
            "@babel/plugin-transform-runtime"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@babel/core": "^7.15.5",
        "@babel/node": "^7.15.8",
        "@babel/plugin-transform-runtime": "^7.15.8",
        "@babel/preset-env": "^7.15.8",
        "husky": "^7.0.2",
        "jest": "^27.2.4",
        "nodemon": "^2.0.14"
    },
    "dependencies": {
        "@babel/runtime": "^7.15.4"
    }
}
